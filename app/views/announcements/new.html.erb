<div class="container">
  <h1>New Announcement</h1>
  <%= form_for @announcement, remote: true do |f| %>
    <fieldset class="form-group">
      <%= f.label :title, class: 'form-control-label' %>
      <%= f.text_field :title, class: 'form-control', placeholder: 'Announcement Title' %>
    </fieldset>
  
    <fieldset class="form-group">
      <%= f.label :description, class: 'form-control-label' %>
      <%= f.text_area :description, cols: 20, rows: 10, class: 'form-control', placeholder: 'Post' %>
    </fieldset>
  
    <%= f.submit 'Create', class: 'btn btn-primary', data: { disable_with: 'Create' } %>
  <% end %>
</div>